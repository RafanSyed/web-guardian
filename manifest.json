{
  "manifest_version": 3,
  "name": "Web Guardian",
  "version": "1.0.2",
  "description": "Blocks manga, anime, and unsafe content",
  "permissions": ["tabs", "storage", "webNavigation"],
  "host_permissions": ["https://motionless-andriana-webguardian-acdbcfa6.koyeb.app/*"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
      }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
