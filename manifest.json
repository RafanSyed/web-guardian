{
  "manifest_version": 3,
  "name": "Web Guardian",
  "version": "1.0.0",
  "description": "Blocks manga, anime, and unsafe content",
  "permissions": ["tabs", "storage", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
